# Frontend - assinatura.ledtech.app
server {
    listen 80;
    server_name assinatura.ledtech.app;

    # Redireciona sempre para https
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name assinatura.ledtech.app;

    ssl_certificate     /etc/ssl/certs/assinatura.crt;
    ssl_certificate_key /etc/ssl/private/assinatura.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    location / {
        proxy_pass http://127.0.0.1:3000;   # frontend container exposto no host
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

# API - api-assinatura.ledtech.app
server {
    listen 80;
    server_name api-assinatura.ledtech.app;

    # Redireciona sempre para https
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name api-assinatura.ledtech.app;

    ssl_certificate     /etc/ssl/certs/api_assinatura.crt;
    ssl_certificate_key /etc/ssl/private/api_assinatura.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    location / {
        proxy_pass http://127.0.0.1:3001;   # backend container exposto no host
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}